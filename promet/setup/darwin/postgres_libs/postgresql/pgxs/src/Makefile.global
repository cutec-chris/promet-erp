with_python	= yes
with_tcl	= yes
with_openssl	= yes
with_ossp_uuid	= yes
with_libxml	= yes
with_libxslt	= yes
with_system_tzdata = 
with_zlib	= yes
enable_shared	= yes
enable_rpath	= yes
enable_nls	= no
enable_debug	= no
enable_dtrace	= no
enable_coverage	= no
enable_thread_safety	= yes

python_includespec	= -I/System/Library/Frameworks/Python.framework/Versions/2.3/include/python2.3
python_libdir		= /System/Library/Frameworks/Python.framework/Versions/2.3/lib/python2.3/config
python_libspec		= -L/System/Library/Frameworks/Python.framework/Versions/2.3/lib/python2.3/config -lpython2.3
python_additional_libs	= -ldl
python_configdir	= /System/Library/Frameworks/Python.framework/Versions/2.3/lib/python2.3/config
python_version		= 2.3

krb_srvtab = FILE:$(sysconfdir)/krb5.keytab

TCLSH			= /usr/bin/tclsh
