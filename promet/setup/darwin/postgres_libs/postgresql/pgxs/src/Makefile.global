TCL_INCLUDE_SPEC	= -I/System/Library/Frameworks/Tcl.framework/Versions/8.4/Headers
TCL_SHARED_BUILD	= 1
TCL_SHLIB_LD_LIBS	= ${LIBS}

PTHREAD_CFLAGS		=    -D_REENTRANT -D_THREAD_SAFE -D_POSIX_PTHREAD_SEMANTICS
PTHREAD_LIBS		=  -lpthread   

